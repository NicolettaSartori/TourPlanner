<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:views="clr-namespace:TourPlanner.Views"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
        Title="Tour Planner" Height="450" Width="800">
    <StackPanel>
        <!-- Navbar -->
        <views:Navbar>
            <views:Navbar.MenuItems>
                <x:Array Type="sys:String">
                    <sys:String>File</sys:String>
                    <sys:String>Edit</sys:String>
                    <sys:String>Options</sys:String>
                    <sys:String>""</sys:String>
                    <sys:String>""</sys:String>
                    <sys:String>Help</sys:String>
                </x:Array>
            </views:Navbar.MenuItems>
        </views:Navbar>
        
        <!-- Search -->
        <Border BorderThickness="0 0 0 1" BorderBrush="DarkGray">
            <views:InputWithButton />
        </Border>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            
            <!-- Left Tab -->
            <TabControl Style="{StaticResource TabControlWithButtons}" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0">
                <TabItem Header="Tours">
                    <views:List />
                </TabItem>
            </TabControl>
            <!-- Right top Tab -->
            <TabControl Grid.Row="0" Grid.Column="1" >
                <TabItem Header="General">
                    <Label Content="Hier sind tolle Infos" Padding="3" Margin="8"/>
                </TabItem>
                <TabItem Header="Route">
                    <views:Map />
                </TabItem>
                <TabItem Header="Misc">
                    <Label Content="Lorem Ipsum" Padding="3" Margin="8"/>
                </TabItem>
            </TabControl>
            
            <!-- Right bottom Tab -->
            <TabControl Style="{StaticResource TabControlWithButtons}" Grid.Row="1" Grid.Column="1">
                <TabItem Header="Tour Logs">
                    <views:DataGrid />
                </TabItem>
            </TabControl>
        </Grid>
    </StackPanel>
</Window>
