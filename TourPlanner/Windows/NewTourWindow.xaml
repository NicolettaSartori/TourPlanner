<Window x:Class="TourPlanner.Windows.NewTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TourPlanner.Windows"
        xmlns:vm="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:TourViewModel, IsDesignTimeCreatable=True}"
        Title="NewTourWindow" Height="450" Width="800">
    
    <Grid>
        <Border Background="White" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <StackPanel>
                <Label><TextBlock Text="Tour Name:"/></Label>
                <Button Content="Save" Command="{Binding SaveCommand}"/>
                <Button Content="Close" Command="{Binding CloseCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
