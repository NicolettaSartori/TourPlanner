<Window x:Class="TourPlanner.Windows.EditTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TourPlanner.Windows"
        xmlns:vm="clr-namespace:TourPlanner.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm:TourViewModel, IsDesignTimeCreatable=True}"
        Title="Edit Tour" MinWidth="500" MinHeight="400" MaxWidth="1300" MaxHeight="800" SizeToContent="WidthAndHeight">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="Auto"/>  
            <RowDefinition Height="*"/>    
            <RowDefinition Height="Auto"/>  
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tour Name -->
        <Label Content="Tour Name:" FontWeight="Bold" Grid.Row="0" Grid.Column="0"/>
        <TextBox Text="{Binding SelectedTour.Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" MinWidth="200"/>

        <!-- Route -->
        <Label Content="Route:" FontWeight="Bold" Grid.Row="1" Grid.Column="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1">
            <TextBox Text="{Binding SelectedTour.From, UpdateSourceTrigger=PropertyChanged}" Width="Auto" MinWidth="100"/>
            <TextBlock Text=" → " VerticalAlignment="Center"/>
            <TextBox Text="{Binding SelectedTour.To, UpdateSourceTrigger=PropertyChanged}" Width="Auto" MinWidth="100"/>
        </StackPanel>

        <!-- Distance -->
        <Label Content="Distance (km):" FontWeight="Bold" Grid.Row="2" Grid.Column="0"/>
        <TextBox Text="{Binding SelectedTour.Distance, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Width="Auto" MinWidth="100"/>

        <!-- Estimated Time -->
        <Label Content="Estimated Time:" FontWeight="Bold" Grid.Row="3" Grid.Column="0"/>
        <TextBox Text="{Binding SelectedTour.EstimatedTime, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Width="Auto" MinWidth="100"/>

        <!-- Transport Type -->
        <Label Content="Transport Type:" FontWeight="Bold" Grid.Row="4" Grid.Column="0"/>
        <ComboBox ItemsSource="{Binding TransportTypes}" SelectedItem="{Binding SelectedTour.TransportType}" Grid.Row="4" Grid.Column="1" Width="Auto" MinWidth="150"/>

        <!-- Description -->
        <Label Content="Description:" FontWeight="Bold" Grid.Row="5" Grid.Column="0"/>
        <TextBox Text="{Binding SelectedTour.Description, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1"
                 Width="Auto" MinWidth="300" MinHeight="80" TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Buttons -->
        <Grid Grid.Row="7" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button Content="Update" Command="{Binding UpdateCommand}" Width="80" Grid.Column="1" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CloseCommand}" Width="80" Grid.Column="2" Margin="5"/>
        </Grid>

    </Grid>
</Window>
